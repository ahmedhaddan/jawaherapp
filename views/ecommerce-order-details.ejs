<%- contentFor('extra_css') %>

<%- contentFor('content') %>

<div class="container-xxl">
    <div class="row">
        <div class="col-lg-8">

            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Order #<%= String(order.id).padStart(6, '0') %></h4>
                            <p class="mb-0 text-muted mt-1"><%= new Date(order.order_date).toLocaleDateString() %> at <%= new Date(order.order_date).toLocaleTimeString() %> </p>
                        </div><!--end col-->
<!--                        <div class="col-auto">-->
<!--                            <button class="btn btn-primary"><i class="fas fa-plus me-1"></i> Add Item</button>-->
<!--                        </div>&lt;!&ndash;end col&ndash;&gt;-->
                    </div>  <!--end row-->
                </div><!--end card-header-->
                <div class="card-body pt-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="table-light">
                              <tr>
                                <th>Item</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Quantity</th>
                                <th class="text-end">Total</th>
                              </tr>
                            </thead>
                            <tbody>
                            <% items.forEach(item => { %>
                                <tr>
                                    <td><%= item.product_name %></td>
                                    <td class="text-end">$<%= Number(item.price).toFixed(2) %></td>
                                    <td class="text-end"><%= item.quantity %></td>
                                    <td class="text-end">$<%= (item.price * item.quantity).toFixed(2) %></td>
                                </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div><!--card-body-->
            </div><!--end card-->
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Order Status</h4>
                        </div><!--end col-->
                        <div class="col-auto">
                            <a  href="/invoice/<%= order.id %>" class="text-secondary"><i class="fas fa-download me-1"></i> Open Invoice</a>
                        </div><!--end col-->
                    </div>  <!--end row-->
                </div><!--end card-header-->
                <div class="card-body pt-0">
                    <div class="position-relative m-4">
                        <div class="progress" role="progressbar" aria-label="Progress" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="height: 1px;">
                          <div class="progress-bar" style="width: 50%"></div>
                        </div>
                        <div class="position-absolute top-0 start-0 translate-middle bg-primary text-white rounded-pill thumb-md"><i class="iconoir-home"></i></div>
                        <div class="position-absolute top-0 start-50 translate-middle bg-primary-subtle text-primary rounded-pill thumb-md"><i class="iconoir-delivery-truck"></i></div>
                        <div class="position-absolute top-0 start-100 translate-middle bg-light text-dark rounded-pill thumb-md"><i class="iconoir-map-pin"></i></div>
                    </div>
                    <div class="row row-cols-3">
                        <div class="col text-start">
                            <h6 class="mb-1">Pending</h6>
                        </div> <!-- end col -->
                        <div class="col text-end">
                            <h6 class="mb-1">Completed</h6>
                        </div> <!-- end col -->
                    </div> <!-- end row -->
<!--                    <div class="bg-primary-subtle p-2 border-dashed border-primary rounded mt-3">-->
<!--                        <span class="text-primary fw-semibold">Note :</span><span class="text-primary fw-normal"> Ship all the ordered item together by monday and i send you an email please check. Thanks!</span>-->
<!--                    </div>-->
                </div><!--card-body-->
            </div><!--end card-->
        </div> <!-- end col -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Order Summary</h4>
                        </div><!--end col-->
                        <div class="col-auto">
                            <span class="badge rounded text-warning bg-warning-subtle fs-12 p-1">Payment pending</span>
                        </div><!--end col-->
                    </div>  <!--end row-->
                </div><!--end card-header-->
                <div class="card-body pt-0">
                    <div>
                        <div class="d-flex justify-content-between">
                            <p class="text-body fw-semibold">Items subtotal :</p>
                            <p class="text-body-emphasis fw-semibold"><%= Number(order.total_price).toFixed(2) %> DH</p>
                        </div>
                        <div class="d-flex justify-content-between">
                          <p class="text-body fw-semibold">Discount :</p>
                          <p class="text-danger fw-semibold">-0.00 DH</p>
                        </div>
                        <div class="d-flex justify-content-between">
                          <p class="text-body fw-semibold mb-0">Shipping Cost :</p>
                          <p class="text-body-emphasis fw-semibold mb-0">0.00 DH</p>
                        </div>
                    </div>
                    <hr class="hr-dashed">
                    <div class="d-flex justify-content-between">
                        <h4 class="mb-0">Total :</h4>
                        <h4 class="mb-0"><%= Number(order.total_price).toFixed(2) %> DH</h4>
                      </div>
                </div><!--card-body-->
            </div><!--end card-->
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Order Information</h4>
                        </div><!--end col-->
<!--                        <div class="col-auto">-->
<!--                            <a href="" class="text-secondary"><i class="fas fa-pen me-1"></i> Edit</a>-->
<!--                        </div>&lt;!&ndash;end col&ndash;&gt;-->
                    </div>  <!--end row-->
                </div><!--end card-header-->
                <div class="card-body pt-0">
                    <div>
                        <div class="d-flex justify-content-between mb-2">
                            <p class="text-body fw-semibold"><i class="iconoir-people-tag text-secondary fs-20 align-middle me-1"></i>Full Name :</p>
                            <p class="text-body-emphasis fw-semibold"><%= order.customer_name %></p>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <p class="text-body fw-semibold"><i class="iconoir-mail text-secondary fs-20 align-middle me-1"></i>Email :</p>
                            <p class="text-body-emphasis fw-semibold"><%= order.customer_email %></p>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <p class="text-body fw-semibold"><i class="iconoir-dollar-circle text-secondary fs-20 align-middle me-1"></i>Total Payment :</p>
                            <p class="text-body-emphasis fw-semibold"><span class="text-primary"><%= Number(order.total_price).toFixed(2) %> DH</span></p>
                        </div>
<!--                        <div class="d-flex justify-content-between mb-2">-->
<!--                            <p class="text-body fw-semibold"><i class="iconoir-calendar text-secondary fs-20 align-middle me-1"></i>Order Date :</p>-->
<!--                            <p class="text-body-emphasis fw-semibold">31 Dec 2023</p>-->
<!--                        </div>-->


                    </div>
                </div><!--card-body-->
            </div><!--end card-->
        </div> <!-- end col -->
    </div> <!-- end row -->
</div><!-- container -->

<%- contentFor('extra_javascript') %>
